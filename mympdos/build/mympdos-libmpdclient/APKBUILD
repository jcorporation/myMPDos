# Maintainer: Juergen Mang <mail@jcgames.de>
pkgname=mympdos-libmpdclient
pkgver=2.25
pkgrel=1
pkgdesc="An asynchronous API library for interfacing MPD in the C, C++ & Objective C languages"
url="https://github.com/MusicPlayerDaemon/libmpdclient"
arch="all"
license="BSD-3-Clause"
makedepends="meson"
provides="libmpdclient libmpdclient-dev"
source="mympdos-libmpdclient.tar.gz"
subpackages="$pkgname-dev $pkgname-doc"
options="!check"

build() {
	meson setup \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--buildtype=release \
		. output
	ninja -C output
}

package() {
	DESTDIR="$pkgdir" ninja -C output install

	mkdir -p "$pkgdir"/usr/share/licenses/$pkgname/
}

sha512sums=""
